<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="display:inline;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <div class="dropdown">
                    <button class="buton_setari" style="background-color:transparent; border: none; outline: none; font-size:32px;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-bars"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li> @Html.ActionLink("Afiseaza produse", "Index", "Products")</li>
                        @if (User.IsInRole("Colaborator") || User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Adaugare produs", "New", "Products")</li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Afisare categorii", "Index", "Categories")</li>
                            <li>@Html.ActionLink("Adaugare categorii", "New", "Categories")</li>
                            <li>@Html.ActionLink("Lista Useri", "Index", "Users")</li>
                        }
                    </ul>
                </div>

            </div>
            <div class="navbar-collapse collapse" style="font-size:20px;">
                @Html.ActionLink("BP", "Index", "Products", new { area = "" }, new { @class = "navbar-brand font-logo" })
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&reg; @DateTime.Now.Year - BP&trade;</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
